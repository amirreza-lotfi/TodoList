<resources>

    <!-- Base application theme. -->
    <style name="Theme.TodoListMVP" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultText" parent="Theme.TodoListMVP">
        <item name="fontFamily">@font/primary_regular</item>
    </style>

    <style name="header" parent="DefaultText">
        <item name="fontFamily">@font/primary_bold</item>
    </style>

    <style name="h1" parent="header">
        <item name="android:textSize">18sp</item>

    </style>

    <style name="h2" parent="header">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="h3" parent="header">
        <item name="android:textSize">14sp</item>

    </style>

    <style name="p" parent="DefaultText">
        <item name="android:textSize">14sp</item>

    </style>

    <style name="PrimaryButton" parent="Theme.TodoListMVP">
        <item name="fontFamily">@font/primary_black</item>
    </style>

    <style name="OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/primary_black</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="SecondaryButton" parent="Theme.TodoListMVP">
        <item name="backgroundTint">@color/secondaryButtonBackgroundTint</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="iconTint">@color/secondaryIconColor</item>
        <item name="fontFamily">@font/primary_bold</item>
        <item name="rippleColor">@color/secondaryIconColor</item>
    </style>

</resources>
